<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>URL Shortner</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
<body>
    <div class="container">
        <h1>URL Shortner</h1>
        <form action="/shorturl" method="POST" class="my-4 form-inline">
            <div class="input-group">
            <label for="fullurl" class="sr-only">
                URL:
            </label>
            <div class="input-group-addon">
                <label for="fullurl">	&#x1F517; </label></div>
            <input type="url" name="fullurl" id="fullurl" required placeholder="Paste Your URL Here" class="form-control cols mr-2"></div>
            <button type="submit" class="btn btn-success">Short</button>
        </form>
        <table class="table table-striped table-responsive">
            <thead>
                <tr>
                    <th>S.No.</th>
                    <th>Original URL</th>
                    <th>Short URL</th>
                    <th>Clicks</th>
                </tr>
            </thead>
            <tbody>
                <% shortUrls.forEach(shortUrl => { %>
                <tr>
                    <td><%= shortUrl._id %></td>
                    <td><a href="<%= shortUrl.full %>" target="_blank"><%= shortUrl.full %></a></td>
                    <td><a href="<%= shortUrl.short %>" target="_blank"><%= shortUrl.short %></a></td>
                    <td><%= shortUrl.click %></td>
                </tr>
               <% }) %>
            </tbody>
        </table>
    </div>
</body>

</html>